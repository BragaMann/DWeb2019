extends layout
block content
    .w3-container
        h1
            b Inserir Novo Filme
        .w3-card-4
            .w3-container
                label
                    b Título
                input.w3-input.w3-border.w3-light-grey(type="text" id='title' required)
                label
                    b Ano
                input.w3-input.w3-border.w3-light-grey(type="text" id='year' required)
                label
                    b Elenco
                .w3-ul(id="cast")
                a.w3-blue-grey.w3-square.w3-button.margin-bottom(href="#" onclick="addFields('cast')") Adicionar ator
                br
                label
                    b Géneros
                .w3-ul(id="genres")
                a.w3-blue-grey.w3-square.w3-button.margin-bottom(href="#" onclick="addFields('genres')") Adicionar Género
                br
                a.w3-btn.w3-blue-grey(onclick="adicionaItem('post','0')" value='Enviar') Enviar
        address.margin-tb
            a(href="/filmes/") Voltar à página inicial
        footer.w3-container
          address Gerado por Trabalho Prático 7 App